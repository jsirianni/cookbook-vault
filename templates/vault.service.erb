[Unit]
Description=Vault secret management tool
Requires=network-online.target
After=network-online.target

[Service]
User=<%=node[:vault][:user]%>
Group=<%=node[:vault][:group]%>
PIDFile=<%=node[:vault][:conf][:pid]%>
ExecStart=<%=node[:vault][:binary]%> server \
    -config=<%=node[:vault][:conf][:config]%> \
    -log-level=<%=node[:vault][:conf][:log_level]%>
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
KillSignal=SIGTERM
Restart=on-failure
RestartSec=42s
LimitMEMLOCK=infinity

[Install]
WantedBy=multi-user.target
